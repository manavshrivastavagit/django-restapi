{{#if this}}
    <h3>Assigned homeworks.</h3>
    {{#each this}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>
                    <span>Subject {{subject.title}}</span>
                </strong>
            </div>
            <div class="panel-body">
                <div id="deadline">
                    <i>Deadline <strong><span>{{deadline}}</span></strong></i>
                </div>
                <div id="details">
                    {{details}}
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>No assigned homeworks for now.</h3>
{{/if}}
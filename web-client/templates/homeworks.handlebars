{{#if this}}
    {{#each this}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>
                    <a href="#/homeworks/{{id}}" class="heading-anchor">{{subject.title}}</a>
                </strong>
            </div>
            <div class="panel-body">
                <div id="deadline">
                    <i>Deadline </i><strong><span>{{formatRelative deadline}}</span></strong>
                </div>
                <div id="details">
                    {{#if details}}
                        <i>Details: </i><strong><span>{{details}}</span></strong>
                    {{else}}
                        <i>No details provided.</i>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>No assigned homeworks for now.</h3>
{{/if}}

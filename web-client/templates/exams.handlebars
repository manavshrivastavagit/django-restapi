{{#if this}}
    {{#each this}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>
                    <a href="#/exams/{{id}}" class="heading-anchor">{{subject.title}}</a>
                </strong>
            </div>
            <div class="panel-body">
                <div>
                    Coming <strong><span>{{formatRelative date}}</span></strong>
                </div>
                <div>
                    <i>Topic: </i><strong><span>{{topic}}</span></strong>
                </div>
                <div>
                    {{#if details}}
                        <i>Details: </i><strong><span>{{details}}</span></strong>
                    {{else}}
                        <i>No details provided.</i>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>No upcoming exams</h3>
{{/if}}

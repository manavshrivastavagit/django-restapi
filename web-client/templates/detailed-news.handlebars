<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>
             <span>{{title}}</span>
         </strong>
    </div>
    <div class="panel-body">
        <div>
            <span><strong><i>{{content}}</i></strong></span>
        </div>
        <div>
            <i>Posted by <strong><span>{{author.user}}</span></strong> on </i><strong><span>{{posted_on}}</span></strong>
        </div>
    </div>
</div>

<div id="comments">
    {{#each comment_set}}
    <div class="row">
        <div class="col-xs-3 col-lg-1">
            <div class="thumbnail">
                <img class="img-responsive user-photo" src="http://127.0.0.1:8000/api{{this.posted_by.profile_image}}">
            </div>
        </div>

        <div class="col-xs-9 col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>{{this.posted_by.user}}</strong> commented on <span class="text-muted">{{this.posted_on}}</span>
                </div>
                <div class="panel-body">
                    {{this.content}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

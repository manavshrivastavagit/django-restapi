<div class="panel panel-primary">
    <div class="panel-heading">
        <strong>
             <span>{{title}}</span>
         </strong>
    </div>
    <div class="panel-body">
        <div>
            <span><strong><i>{{content}}</i></strong></span>
        </div>
        <div>
            <i>Posted by <strong><span>{{author.user}}</span></strong> on </i><strong><span>{{posted_on}}</span></strong>
        </div>
    </div>
</div>

<div id="comments">
    {{#each comment_set}}
    <div class="row comment">
        <div class="col-xs-3 col-sm-1 col-md-1 col-lg-1 img-container">
            <img class="user-photo" src="http://127.0.0.1:8000/api{{this.posted_by.profile_image}}">
        </div>

        <div class="col-xs-9 col-sm-10 col-sm-10 col-md-10 col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <strong>{{this.posted_by.user}}</strong> commented on <span class="text-muted">{{this.posted_on}}</span>
                </div>
                <div class="panel-body">
                    {{this.content}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<button class="center-block" id="loadMore">Load More</button>
<button class="toTop btn btn-primary btn-circle btn-lg"><span class="glyphicon glyphicon-chevron-up"></span></button>

<div class="row center-block form-wrapper">
    <input type="text" id="comment-content" class="col-xs-8 col-sm-10 col-md-10 col-lg-10"></input>
    <button id="add-comment-button" class="btn btn-primary submit">Send<span class="glyphicon glyphicon-send"></span></span></button>
</div>
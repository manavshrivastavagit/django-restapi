<div class="row comment new-comment">
    <div class="col-xs-2 col-md-1 img-container">
        <img class="user-photo" src="http://127.0.0.1:8000/api{{posted_by.profile_image}}">
    </div>

    <div class="col-xs-9 col-md-10">
        <div id="comment-{{id}}" class="panel panel-default">
            <div class="panel-heading">
                <strong>{{posted_by.user}}</strong> commented <span class="text-muted">{{formatRelative posted_on}}</span>
                {{#if editable}}
                    <div class="pull-right edit-comments">
                        <a href="#/news/{{newsId}}/comments/{{id}}/edit"><span class="glyphicon glyphicon-edit"></span></a>
                        <a href="#/news/{{newsId}}/comments/{{id}}/delete"><span class="glyphicon glyphicon-trash"></span></a>
                    </div>
                {{/if}}
            </div>
            <div class="panel-body">
                {{content}}
            </div>
        </div>
    </div>
</div>
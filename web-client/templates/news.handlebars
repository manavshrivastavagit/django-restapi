{{#if this}}
    <h3>News for my class</h3>
    {{#each this}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>
                    <span>{{title}}</span>
                </strong>
            </div>
            <div class="panel-body">
                <div>
                    <i>Posted on: </i><strong><span>{{posted_on}}</span></strong>
                </div>
                <div>
                    <span><strong><i>{{content}}</i></strong></span>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>No news for my class</h3>
{{/if}}

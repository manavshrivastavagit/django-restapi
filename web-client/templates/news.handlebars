{{#if this}}
    <h3>News for my class</h3>
    {{#each this}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>
                    <span><a href="#/news/{{id}}">{{title}}</a></span>
                </strong>
            </div>
            <div class="panel-body">
                <div>
                    <span><strong><i>{{content}}</i></strong></span>
                </div>
                <div>
                    <i>Posted by <strong><span>{{author.user}}</span></strong> on </i><strong><span>{{posted_on}}</span></strong>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>No news for my class</h3>
{{/if}}
<a href="#/add-news">
    <button type="button" class="btn btn-info btn-circle btn-lg">
        <i class="glyphicon glyphicon-pencil"></i>
    </button>
</a>
